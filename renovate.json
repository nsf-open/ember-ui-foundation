{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["@types/ember__"],
      "groupName": "ember-typings",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["@storybook/"],
      "groupName": "storybook",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
