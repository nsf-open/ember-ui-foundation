{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekends",
    "npm:unpublishSafe"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint", "lint"],
      "groupName": "linting",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["@types/"],
      "groupName": "definitely-typed",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackagePatterns": ["@storybook/"],
      "groupName": "storybook",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
