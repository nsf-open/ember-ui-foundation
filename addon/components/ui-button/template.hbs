<UiInlineTextIconLayout
  @text={{this.text}}
  @icon={{this.icon}}
  @iconPlacement={{this.iconPlacement}}
  @responsive={{this.responsive}}
  @pending={{this.isPending}}
  @fw={{true}}
  @tooltip={{this.tooltip}}
  @doesParentHaveBlockContent={{if (has-block) true false}}
>
  {{#if (has-block)}}{{yield}}{{else}}{{this.text}}{{/if}}
</UiInlineTextIconLayout>

{{#if this.tooltipText}}
  <UiTooltipAttachment @enabled={{or this.enabled this.isFauxDisabled}}>
    {{~this.tooltipText~}}
  </UiTooltipAttachment>
{{/if}}