{{#if this.renderPanel}}
  <section class="panel {{this.variantClassName}}" data-test-id={{this.testId}}>
    {{#if this.hasHeading}}
      <header class="panel-heading {{this.headingClass}}">
        <UiHeading @class="panel-title" @level="{{this.headingLevel}}">{{this.heading}}</UiHeading>
      </header>
    {{/if}}

    <div class="panel-body">{{yield}}</div>
  </section>
{{else~}}
  {{yield}}
{{~/if}}
