<div role="document" class="modal-dialog {{this.sizeClass}} {{if this.centered "modal-dialog-centered"}}">
  <div class="modal-content">
    <div id={{this.titleId}} class="modal-header">
      <button type="button"
              aria-label="Close"
              class="close"
              disabled={{this.closeDisabled}}
              onclick={{action this.onClose}}
      >
        <span aria-hidden="true">Ã—</span>
      </button>
      <h4 class="modal-title">{{this.title}}</h4>
    </div>

    <div class="modal-body">
      {{yield (hash close=(action this.onClose))}}
    </div>
  </div>
</div>